{
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declarationDir": "types",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "**/*.js",
    "games/utils/p2p/Room-types.d.ts",
    "@types/types.d.ts",
    "@types/generated/main.d.ts",
  ],
}
