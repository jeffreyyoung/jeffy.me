{
  "compilerOptions": {
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declarationDir": "types",
    "declaration": true
  },
  "include": ["**/*.js", "@types/**.d.ts"],
}
